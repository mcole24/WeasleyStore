<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_name %>
    <%= f.text_field :product_name %>
  </div>
  
  
  
  <%= f.file_field :images, multiple: true %>
  <br>
  
  <% @product.images.each do |image| %>
    <%= image_tag(image, class: "img-responsive img-rounded", :size => "65x45") %>
  <% end %>
  
  <br>
  <%= f.check_box :remove_images %><p>Check the box to delete all images.</p>
  
  
  <div class="field">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :galleons %>
    <%= f.number_field :galleons %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
