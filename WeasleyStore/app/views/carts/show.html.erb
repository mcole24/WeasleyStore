<p id="notice"><%= notice %></p>

<h2>My Cart</h2>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
        </tr>
        <tbody>
            <% @cart.line_items.each do |item| %>
                <tr>
                    <td><%= item.product.product_name %></td>
                    <td><%= item.quantity %></td>
                </tr>
            <% end %>
        </tbody>
    </thead>
</table>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
